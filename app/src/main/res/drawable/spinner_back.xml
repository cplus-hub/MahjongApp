<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    //第一組item 圓角邊框。
    <item>
        <shape>
            <stroke
                android:width="0dp"
                android:color="#B6B4B4" />
            //邊框線顏色
            <corners android:radius="5dp" />
            //圓角度數
            <solid android:color="#3f6f3f">//背景顏色
            </solid>
            <padding android:right="0dp" />
            //邊距
            <size
                android:width="0dp"
                android:height="0dp" />
        </shape>
    </item>
    <item>
        <bitmap
            android:antialias="true"
            android:gravity="end"
            android:src="@drawable/baseline_arrow_drop_down"
            android:tint="#FFFFFF"/>
    </item>
</layer-list>